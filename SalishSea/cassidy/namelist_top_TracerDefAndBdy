   sn_tracer(6)  = 'COW     ' , 'Cowichan River                         ',  '1' ,  .false.     , .true.
   sn_tracer(7)  = 'NAN     ' , 'Nanaimo River                          ',  '1' ,  .false.     , .true.
   sn_tracer(8)  = 'PUNT    ' , 'Puntledge River                        ',  '1' ,  .false.     , .true.
   sn_tracer(9)  = 'SALM    ' , 'Salmon River                           ',  '1' ,  .false.     , .true.
   sn_tracer(10) = 'HOM     ' , 'Homathko River                         ',  '1' ,  .false.     , .true.
