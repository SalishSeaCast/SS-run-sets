   rn_trofac(5)   =  1.0  !  -      -      -     -
   rn_trofac(6)   =  0.0  !  set ciliates to zero
   rn_trofac(7)   =  1.0  !  -      -      -     -
   rn_trofac(8)   =  1.0  !  -      -      -     -
   rn_trofac(9)   =  1.0  !  -      -      -     -
