   sn_tracer(8)  = 'DOC     ' , 'Dissolved organic Concentration        ',  'mol-C/L' ,  .true.     , .true.    ,  .false. ,  .false.  ,  .true.
   sn_tracer(9)  = 'POC     ' , 'Small organic carbon Concentration     ',  'mol-C/L' ,  .true.     , .true.    ,  .false. ,  .false.  ,  .true.
